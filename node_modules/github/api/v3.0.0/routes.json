{
    "defines": {
        "constants": {
            "name": "Github",
            "description": "A Node.JS module, which provides an object oriented wrapper for the GitHub v3 API.",
            "protocol": "https",
            "host": "api.github.com",
            "port": 443,
            "dateFormat": "YYYY-MM-DDTHH:MM:SSZ",
            "requestFormat": "json"
        },
        "response-headers": [
            "X-RateLimit-Limit",
            "X-RateLimit-Remaining",
            "Link"
        ],
        "params": {}
    },
    
    "events": {
        "get": {
            "url": "/events",
            "method": "GET",
            "params": {
                "$page": null,
                "$per_page": null
            }
        },
        
        "get-from-user": {
            "url": "/users/:user/events",
            "method": "GET",
            "params": {
                "$user": null,
                "$page": null,
                "$per_page": null
            }
        }
    }
}
